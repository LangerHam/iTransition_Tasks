@model UserManagement.ViewModel.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/Empty.cshtml";
}

<style>
    .modern-login-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 1rem;
    }

    .glass-form-wrapper {
        background: rgba(40, 20, 60, 0.5);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 2.5rem 3rem;
        width: 100%;
        max-width: 420px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        color: white;
    }

    .app-logo {
        font-size: 2.5rem;
        font-weight: bold;
        color: #ffffff;
        margin-bottom: 1rem;
        text-align: center;
        letter-spacing: 0.2rem;
    }

    .form-header {
        text-align: center;
        margin-bottom: 2.5rem;
    }

        .form-header h2 {
            font-weight: 300;
            font-size: 1.25rem;
            color: rgba(255, 255, 255, 0.8);
        }

    .form-control {
        height: 50px;
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        font-size: 1rem;
        width: 100%;
    }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.6);
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.4);
            color: white;
            box-shadow: none;
        }

    .btn-primary {
        height: 50px;
        border-radius: 10px;
        background-color: #4A90E2;
        border: none;
        font-size: 1.1rem;
        font-weight: 600;
        transition: background-color 0.3s ease;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #407ac2;
        }

    .text-danger {
        color: #ffcdd2 !important;
        font-size: 0.875rem;
        padding-left: 0.25rem;
    }

    .bottom-links {
        color: rgba(255, 255, 255, 0.8);
    }

        .bottom-links a {
            color: #ffffff;
            font-weight: 600;
            text-decoration: none;
        }

            .bottom-links a:hover {
                text-decoration: underline;
            }
</style>

<div class="modern-login-container">
    <div class="glass-form-wrapper">
        <div class="app-logo">
            PANEL
        </div>
        <div class="form-header">
            <h2>Create Your Account</h2>
        </div>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            <div class="form-group mb-3">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Full Name" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-4">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <div class="form-group d-grid mb-4">
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </div>

            <div class="text-center bottom-links">
                <span>Already have an account? @Html.ActionLink("Sign In", "Login")</span>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
